                            <Run Text="Qq" />
                        </Hyperlink>
                    </TextBlock>

                </StackPanel>
                <!--  row 2  -->
                <StackPanel Orientation="Horizontal">

                    <!-- R -->
                    <TextBlock>
                        <Hyperlink NavigateUri="r" Click="Hyperlink_Click">
                            <Run Text="Rr" />
                        </Hyperlink>
                    </TextBlock>

                    <!-- S -->
                    <TextBlock>
                        <Hyperlink NavigateUri="s" Click="Hyperlink_Click">
                            <Run Text="Ss" />
                        </Hyperlink>
                    </TextBlock>

