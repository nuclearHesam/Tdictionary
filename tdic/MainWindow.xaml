<Window x:Class="tdic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:tdic"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="630" Width="850"
        MinHeight="630" MinWidth="850"
        Icon="D:\Study\MyAPP\Project\tdic\tdic\Images\MainWindow\Book.png" 
        Loaded="Window_Loaded">

    <!--  Background  -->
    <Window.Background>
        <ImageBrush ImageSource="D:\Study\MyAPP\Project\tdic\tdic\Images\MainWindow\books-background.jpg" />
    </Window.Background>

    <!--  Respurces  -->
    <Window.Resources>
        
        <FontFamily x:Key="Vazir">D:\Study\MyAPP\Project\tdic\tdic\Fonts\Vazir.ttf#Vazir</FontFamily>
        <FontFamily x:Key="Vazir Bold">D:\Study\MyAPP\Project\tdic\tdic\Fonts\Vazir-Bold.ttf#Vazir</FontFamily>
        <FontFamily x:Key="Proxima ExtraBold">D:\Study\MyAPP\Project\tdic\tdic\Fonts\ProximaSoft-ExtraBold.ttf#Proxima Soft ExtraBold</FontFamily>
        <FontFamily x:Key="Proxima Medium">D:\Study\MyAPP\Project\tdic\tdic\Fonts\ProximaSoft-Medium.ttf#Proxima Soft Medium</FontFamily>
    
    </Window.Resources>

    <!--  Contents  -->
    <Grid Margin="10">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.17*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- toolbar  -->
        <Grid VerticalAlignment="Center"
              HorizontalAlignment="Center">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!--  Setting  -->
            <Button x:Name="Setting_btn" 
                    Click="Setting_btn_Click" 
                    Content="Setting" 
                    FontWeight="Medium"
                    Margin="0 0 5 0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="ButtonBorder" Padding="5" BorderThickness="1" >
                                        <StackPanel >
                                            <Image x:Name="ButtonImage" Source="D:\Study\MyAPP\Project\tdic\tdic\Images\MainWindow\Toolbar\Setting_Preview.png" Width="40" Height="40"/>
                                            <TextBlock Text="{Binding Path=Content, RelativeSource={RelativeSource TemplatedParent}}" Foreground="WhiteSmoke" HorizontalAlignment="Center"  FontSize="15"  />
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="ButtonImage" Property="Source" Value="D:\Study\MyAPP\Project\tdic\tdic\Images\MainWindow\Toolbar\Setting_Hover.png"/>
                                            <Setter TargetName="ButtonBorder" Property="BorderThickness" Value="1"/>
                                            <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="White"/>
                                            <Setter TargetName="ButtonBorder" Property="CornerRadius"  Value="10" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="ButtonBorder" Property="BorderThickness" Value="1"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <!--  Help  -->
            <Button Content="Help" 
                    x:Name="Help_btn" 
                    Click="Help_btn_Click" 
                    FontWeight="Medium"
                    Grid.Column="1">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="ButtonBorder" Padding="5" BorderThickness="1" >
                                        <StackPanel  >
                                            <Image x:Name="ButtonImage" Source="D:\Study\MyAPP\Project\tdic\tdic\Images\MainWindow\Toolbar\Help_Preview.png" Width="40" Height="40"/>
                                            <TextBlock Text="{Binding Path=Content, RelativeSource={RelativeSource TemplatedParent}}" Foreground="WhiteSmoke" HorizontalAlignment="Center" FontSize="15" x:Name="Help_txb" />
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="ButtonImage" Property="Source" Value="D:\Study\MyAPP\Project\tdic\tdic\Images\MainWindow\Toolbar\Help_Hover.png"/>
                                            <Setter TargetName="ButtonBorder" Property="BorderThickness" Value="1"/>
                                            <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="White"/>
                                            <Setter TargetName="ButtonBorder" Property="CornerRadius"  Value="10" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="ButtonBorder" Property="BorderThickness" Value="1"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

        </Grid>

        <!--  buttons  -->
        <Grid Grid.Row="1"
              Margin="20 20 20 20">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--  Add new Word  -->
            <Button Content="Add new Word" 
                    x:Name="Add_new_Word_btn" 
                    FontSize="25" 
                    Click="Add_new_Word_btn_Click">

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="#DC143C"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="2"/>
                        <Setter Property="BorderBrush" Value="#DC143C"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Border CornerRadius="23" Height="45" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                                            <ContentPresenter  HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Background" >
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                                        <GradientStop Color="#8B0000" Offset="0.0"/>
                                                        <GradientStop Color="#B22222" Offset="1"/>
                                                    </LinearGradientBrush> 
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="BorderThickness" Value="0"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#B70F03"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <!--  Words  -->
            <Button Content="Words" 
                    x:Name="Words_btn"
                    FontSize="22" 
                    FontWeight="Bold" 
                    Click="Words_btn_Click" 
                    Grid.Row="1">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="#FF7F50"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="2"/>
                        <Setter Property="BorderBrush" Value="#FF7F50"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Border CornerRadius="23" Height="45" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                                            <ContentPresenter  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                                        <GradientStop Color="#FF8C00" Offset="0.0"/>
                                                        <GradientStop Color="#FF4500" Offset="1"/>
                                                    </LinearGradientBrush> 
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="BorderThickness" Value="0"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#D57333"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <!--  Daily Course  -->
            <Button Content="Daily Course" 
                    x:Name="Daily_Course_btn"
                    FontSize="22" 
                    FontWeight="Bold" 
                    Grid.Row="2">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="#FF1493"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="2"/>
                        <Setter Property="BorderBrush" Value="#FF1493"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Border CornerRadius="23" Height="45" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                                            <ContentPresenter  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                                        <GradientStop Color="#DB7093" Offset="0.0"/>
                                                        <GradientStop Color="#C71585" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="BorderThickness" Value="0"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#A8910F"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <!--  Daily Practice  -->
            <Button Content="Daily Practice" 
                    x:Name="Daily_Practice_btn"
                    FontSize="22" 
                    FontWeight="Medium" 
                    Grid.Row="3">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="#2E8B57"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="2"/>
                        <Setter Property="BorderBrush" Value="#2E8B57"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Border CornerRadius="23" Height="45" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                                            <ContentPresenter  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Background" >
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                                        <GradientStop Color="#006400" Offset="0.0"/>
                                                        <GradientStop Color="#008000" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="BorderThickness" Value="0"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Background" Value="#556B2F"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <!--  Translate  -->
            <Button Content="Translate" 
                    x:Name="Translate_btn" 
                    FontSize="22" 
                    FontWeight="Medium" 
                    Grid.Row="4">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="#4682B4"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="2"/>
                        <Setter Property="BorderBrush" Value="#4682B4"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Border CornerRadius="23" Height="45" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                                            <ContentPresenter  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Background" >
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                                        <GradientStop Color="#40E0D0" Offset="0.0"/>
                                                        <GradientStop Color="#00CED1" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="BorderThickness" Value="0"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Background" Value="#02788D"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <!--  Image Gallery  -->
            <Button Content="Image Gallery" 
                    x:Name="Image_Gallery_btn"
                    FontSize="22" 
                    FontWeight="Medium"
                    Grid.Row="5">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="#BA55D3"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="2"/>
                        <Setter Property="BorderBrush" Value="#BA55D3"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Border CornerRadius="23" Height="45" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                                            <ContentPresenter  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Background" >
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                                        <GradientStop Color="#8A2BE2" Offset="0.0"/>
                                                        <GradientStop Color="#9932CC" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="BorderThickness" Value="0"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Background" Value="#57008D"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

        </Grid>

        <!--  Words Search  -->
        <Grid Grid.Column="1" Grid.RowSpan="2"
                     Margin="30 30 30 30">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!--  background  -->
            <Grid.Background >
                <ImageBrush ImageSource="D:\Study\MyAPP\Project\tdic\tdic\Images\MainWindow\Books_Elemente_background.jpg"/>
            </Grid.Background>

            <!--  RadioButtons  -->
            <Grid x:Name="grd_RadioButtons"
                  Margin="25 25 25 25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!--  PRONOUN  -->
                <RadioButton Content="PRONOUN " 
                             x:Name="PRONOUN_rbt" 
                             Foreground="Black" 
                             FontSize="12" 
                             Checked="PRONOUN_rbt_Checked" 
                             VerticalAlignment="Center">
                    <RadioButton.LayoutTransform>
                        <ScaleTransform ScaleX="1.3" ScaleY="1.3"/>
                    </RadioButton.LayoutTransform>
                </RadioButton>

                <!--  VERB  -->
                <RadioButton Content="VERB" 
                             x:Name="VERB_rbt" 
                             Foreground="Black"
                             FontSize="12" 
                             Grid.Row="1" 
                             Checked="PRONOUN_rbt_Checked"
                             VerticalAlignment="Center">
                    <RadioButton.LayoutTransform>
                        <ScaleTransform ScaleX="1.3" ScaleY="1.3"/>
                    </RadioButton.LayoutTransform>
                </RadioButton>

                <!--  NOUN  -->
                <RadioButton Content="NOUN" 
                             x:Name="NOUN_rbt" 
                             Foreground="Black" 
                             FontSize="12" 
                             Grid.Row="2" 
                             Checked="PRONOUN_rbt_Checked"
                             VerticalAlignment="Center">
                    <RadioButton.LayoutTransform>
                        <ScaleTransform ScaleX="1.3" ScaleY="1.3"/>
                    </RadioButton.LayoutTransform>
                </RadioButton>

                <!--  AJECTIVE  -->
                <RadioButton Content="AJECTIVE" 
                             x:Name="ADJECTIVE_rbt" 
                             Foreground="Black" 
                             FontSize="12" 
                             Grid.Row="3" 
                             Checked="PRONOUN_rbt_Checked"
                             VerticalAlignment="Center">
                    <RadioButton.LayoutTransform>
                        <ScaleTransform ScaleX="1.3" ScaleY="1.3"/>
                    </RadioButton.LayoutTransform>
                </RadioButton>


                <!--  col2  -->

                <!--  ADVERB  -->
                <RadioButton Content="ADVERB" 
                             x:Name="ADVERB_rbt" 
                             Foreground="Black" 
                             FontSize="12" 
                             Checked="PRONOUN_rbt_Checked"
                             Grid.Column="1"
                             VerticalAlignment="Center">
                    <RadioButton.LayoutTransform>
                        <ScaleTransform ScaleX="1.3" ScaleY="1.3"/>
                    </RadioButton.LayoutTransform>
                </RadioButton>

                <!--  PREPOSITION  -->
                <RadioButton Content="PREPOSITION" 
                             x:Name="PREPOSITION_rbt" 
                             Foreground="Black" 
                             FontSize="12"
                             Grid.Row="1" 
                             Checked="PRONOUN_rbt_Checked"
                             Grid.Column="1"
                             VerticalAlignment="Center">
                    <RadioButton.LayoutTransform>
                        <ScaleTransform ScaleX="1.3" ScaleY="1.3"/>
                    </RadioButton.LayoutTransform>
                </RadioButton>

                <!--  CONJUNCTION  -->
                <RadioButton Content="CONJUNCTION" 
                             x:Name="CONJUNCTION_rbt" 
                             Foreground="Black" 
                             FontSize="12" 
                             Grid.Row="2" 
                             Checked="PRONOUN_rbt_Checked"
                             Grid.Column="1"
                             VerticalAlignment="Center">
                    <RadioButton.LayoutTransform>
                        <ScaleTransform ScaleX="1.3" ScaleY="1.3"/>
                    </RadioButton.LayoutTransform>
                </RadioButton>

                <!--  INTERJECTION  -->
                <RadioButton Content="INTERJECTION" 
                             x:Name="INTERJECTION_rbt"
                             Foreground="Black"
                             FontSize="12"
                             Grid.Row="3" 
                             Checked="PRONOUN_rbt_Checked"
                             Grid.Column="1"
                             VerticalAlignment="Center">
                    <RadioButton.LayoutTransform>
                        <ScaleTransform ScaleX="1.3" ScaleY="1.3"/>
                    </RadioButton.LayoutTransform>
                </RadioButton>

            </Grid>

            <!--  listBox  -->
            <Grid Grid.Row="1"
                  Margin="25 0 25 25">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="1.1*"/>
                </Grid.ColumnDefinitions>

                <!--  listBox  -->
                <ListBox Margin="0 0 12.5 0" 
                         x:Name="Words_lbx" 
                         SelectionChanged="Words_lbx_SelectionChanged"
                         MouseDoubleClick="Words_lbx_MouseDoubleClick">
                    <ListBox.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.5"/>
                    </ListBox.Effect>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding WordID}" Margin="5" Visibility="Collapsed"/>
                                <TextBlock Text="{Binding English}" Margin="5"/>
                                <TextBlock Text="{Binding Persian}" Margin="5" Visibility="Collapsed"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!--  treeview  -->
                <TreeView Margin="12.5 0 0 0" 
                          x:Name="Word_trw" 
                          Grid.Column="1" 
                          Opacity="90">
                    <TreeView.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.5"/>
                    </TreeView.Effect>
                </TreeView>

            </Grid>

            <!--  Words  -->
            <Grid Margin="25 0 25 25" 
                Grid.Row="2">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Style.Setters>
                            <Setter Property="FontFamily" Value="{StaticResource Proxima Medium}"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style.Setters>
                    </Style>
                </Grid.Resources>


                <!--  A  -->
                <TextBlock>
                        <Hyperlink NavigateUri="a" Click="Hyperlink_Click">
                            <Run Text="Aa" />
                        </Hyperlink>
                </TextBlock>

                <!--  B  -->
                <TextBlock Grid.Column="1">
                        <Hyperlink NavigateUri="b"  Click="Hyperlink_Click">
                            <Run Text="Bb" />
                        </Hyperlink>
                </TextBlock>

                <!--  C  -->
                <TextBlock Grid.Column="2">
                        <Hyperlink NavigateUri="c" Click="Hyperlink_Click">
                            <Run Text="Cc" />
                        </Hyperlink>
                </TextBlock>

                <!--  E  -->
                <TextBlock  Grid.Column="3">
                        <Hyperlink NavigateUri="e" Click="Hyperlink_Click">
                            <Run Text="Ee" />
                        </Hyperlink>
                </TextBlock>

                <!--  F  -->
                <TextBlock Grid.Column="4">
                        <Hyperlink NavigateUri="f" Click="Hyperlink_Click">
                            <Run Text="Ff" />
                        </Hyperlink>
                </TextBlock>

                <!-- G -->
                <TextBlock Grid.Column="5">
                        <Hyperlink NavigateUri="g" Click="Hyperlink_Click">
                            <Run Text="Gg" />
