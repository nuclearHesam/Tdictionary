                    <TextBlock>
                        <Hyperlink NavigateUri="z" Click="Hyperlink_Click">
                            <Run Text="Zz" />
                        </Hyperlink>
                    </TextBlock>

                </StackPanel>
            </StackPanel>

            <!--  Search  -->
            <StackPanel Margin="40 10 0 0" Orientation="Horizontal"
                            HorizontalAlignment="Left">

                <TextBlock Text="Serach:" 
                               Foreground="White" 
                               FontFamily="{StaticResource Vazir}" 
                               FontSize="22" 
